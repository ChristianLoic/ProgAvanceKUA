@model MvcFeeder.Models.FeedingSideViewModel

@{
    ViewData["Title"] = "Feeder";
}

<h2>BreastFeeding Records</h2>

<p>
    <a asp-action="Create"> New Record</a>
</p>
<form asp-controller="BreastFeeds" asp-action="Index" method="get">
    <p>
    <p>

        <select asp-for="FeedingSide" asp-items="Model.Sides">
            <option value="">Both sides</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
    
</form><table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BreastFeeds[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BreastFeeds[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BreastFeeds[0].Side)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BreastFeeds[0].hour)
            </th>Note
            <th>
                @Html.DisplayNameFor(model => model.BreastFeeds[0].Note)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BreastFeeds) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Side)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
